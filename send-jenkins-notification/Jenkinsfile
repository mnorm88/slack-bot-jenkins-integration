pipeline {

    agent any

    stages {

        stage('Checkout Codebase') {
            steps{
                checkout scm: [$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[credentialsId: 'github-ssh-key', url: 'git@github.com:mnorm88/slack-go-api-examples.git']]]
            }
        }

        stage('Build') {
            steps {
                sh 'echo Building Codebase!'
            }
        }

        stage('Test'){
            steps{
                sh 'echo Running Tests on changes'
            }
        }

        stage('Deploy'){
            steps{
               
                sh 'pwd; ls'
                echo 'Done!'
                
            }
        }
    }

    post {

 always {

     echo 'Sending slack message'
     sh "go run jenkins-slack-notification/slack-notification.go ${BUILD_URL} ${currentBuild.currentResult} ${BUILD_NUMBER} ${JOB_NAME} "
      }
    }
}